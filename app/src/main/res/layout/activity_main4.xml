<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity4">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_full_logo">

        </ImageView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/user_icon"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main">
    </ImageButton>

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textSize="20sp"
        android:text="TheRealAtkCasterV2"
        android:background="@drawable/ui_button_design"
        app:layout_constraintTop_toBottomOf="@id/profile_image">

    </TextView>

    <TextView
        android:id="@+id/account_created"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:text="Account created: "
        android:background="@drawable/ui_button_design"
        app:layout_constraintTop_toBottomOf="@id/username">

    </TextView>

    <TextView
        android:id="@+id/dark_mode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:text="Dark Mode"
        android:background="@drawable/ui_button_design"
        app:layout_constraintTop_toBottomOf="@id/account_created">

    </TextView>

    <Switch
        android:id="@+id/toggle_darkmode_lightmode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        app:layout_constraintTop_toTopOf="@id/dark_mode"
        app:layout_constraintEnd_toEndOf="@id/dark_mode"
        app:layout_constraintStart_toStartOf="@id/dark_mode"
        app:layout_constraintBottom_toBottomOf="@id/dark_mode"
        tools:ignore="UseSwitchCompatOrMaterialXml">

    </Switch>

    <Button
        android:id="@+id/delete_account"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ui_button_design"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="10dp"
        android:text="Terminate Account"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dark_mode">

    </Button>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_loading_activities"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/delete_account"
        app:layout_constraintBottom_toTopOf="@id/footer"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        app:lottie_rawRes="@raw/loading_termination"
        app:lottie_autoPlay="true"
        app:lottie_loop="true">

    </com.airbnb.lottie.LottieAnimationView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="15dp">

            <ImageButton
                android:id="@+id/favorite_navigation"
                android:contentDescription="favorite"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/bookmark">
            </ImageButton>

            <ImageButton
                android:id="@+id/home_navigation"
                android:contentDescription="home"
                android:layout_width="50dp"
                android:layout_marginStart="75dp"
                android:layout_height="match_parent"
                android:background="@drawable/home">
            </ImageButton>

            <ImageButton
                android:id="@+id/user_setting_navigation"
                android:contentDescription="user_setting"
                android:layout_width="50dp"
                android:layout_marginStart="75dp"
                android:layout_height="match_parent"
                android:background="@drawable/user">
            </ImageButton>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>